<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahul.olx">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OLX">

        <activity android:name=".NamePageActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".Activities.PhoneDetails" />
        <activity android:name=".Activities.Homepage" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.Welcome_Splash_Screen"/>
            <activity android:name=".Activities.AccountPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>